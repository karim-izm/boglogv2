<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/black"
    android:gravity="center_horizontal"
    tools:context=".services.AddBookActivity">

    <!-- Page Title -->
    <TextView
        android:id="@+id/textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Book"
        android:textSize="60sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/beyond_the_mountains"
        android:layout_marginBottom="0dp" />

    <!-- Subtitle / Description -->
    <TextView
        android:id="@+id/textview_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill in the details below to add a new book to your library"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/roboto"
        android:layout_marginBottom="100dp" />

    <!-- ISBN Input Field -->
    <EditText
        android:id="@+id/edittext_isbn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ISBN"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/black"
        android:textColorHint="#808080"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Title Input Field -->
    <EditText
        android:id="@+id/edittext_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Title"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:fontFamily="@font/roboto"
        android:textColor="@android:color/black"
        android:textColorHint="#808080"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- Category Spinner -->
    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_input"
        android:padding="12dp"
        android:fontFamily="@font/roboto"
        android:textColorHint="@color/white"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- Add Book Button -->
    <Button
        android:id="@+id/btn_add"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@android:color/white"
        android:fontFamily="@font/beyond_the_mountains"
        android:padding="12dp"
        android:text="Add Book"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_marginTop="20dp" />

</LinearLayout>
