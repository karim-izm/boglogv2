<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <!-- Splash Activity as the launcher -->
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <activity
            android:name=".services.EditBookActivity"
            android:exported="false" />

        <!-- LoginActivity will be launched after the splash screen -->
        <activity
            android:name=".services.LoginActivity"
            android:exported="true" />

        <activity
            android:name=".services.DisplayBookActivity"
            android:exported="false" />

        <activity
            android:name=".services.ListBookActivity"
            android:exported="false" />

        <activity
            android:name=".services.DeleteBookActivity"
            android:exported="false" />

        <activity
            android:name=".services.AddBookActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true" />

    </application>

</manifest>
